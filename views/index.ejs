<!doctype html>
<html>
<head>
  <link rel="stylesheet" href="/css/material-icons.css">
  <link rel="stylesheet" href="/css/materialize.min.css">
  <link rel="stylesheet" href="/css/application.css">
  <script type="text/javascript" src="/js/jquery.min.js"></script>
  <script type="text/javascript" src="/js/materialize.min.js"></script>
  <script>
    $(document).ready(function () {
      $('.slider').slider({
        indicators: false
      });

      $(document).on('click', '#crashButton', function (event) {
        event.preventDefault();
        $.ajax({
          url: '/crash',
          type: 'get',
          error: function(XMLHttpRequest, textStatus, errorThrown) {
            console.log('crashed');
          },
          success: function(data) {
            console.log('success');
          }
        });
        location.reload();
      });
    });
  </script>
</head>

<body>
  <div calss="navbar-fixed" style="z-index:10000;position:relative;">
    <nav class="nav-extended black">
      <div class="nav-wrapper">
        <a href="#" class="brand-logo" style="margin-top:0.5em;margin-left:1em;">
          <img src="/image/dew-logo.png">
        </a>
      </div>
      <div class="nav-content">
        <span class="nav-title"></span>
      </div>
    </nav>
  </div>

  <div class="slider fullscreen">
    <ul class="slides">
      <li>
        <img src="/image/dew-bg.jpg">
        <div class="caption center-align">
          <h1><br><br><%= instanceId %><br></h1>
          <a id="crashButton" style="cursor: pointer;">
            <i class="large material-icons" style="color: white;">
              help
            </i>
          </a>
        </div>
      </li>
    </ul>
  </div>
</body>
</html>
